{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "filesystem": {
      "type": "local",
      "command": ["/usr/local/bin/npx", "-y", "@modelcontextprotocol/server-filesystem", "/Users/YOUR_USERNAME"],
      "enabled": true
    },
    "github": {
      "type": "local",
      "command": ["/usr/local/bin/npx", "-y", "@modelcontextprotocol/server-github"],
      "enabled": true,
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "ghp_YOUR_TOKEN_HERE"
      }
    },
    "memory": {
      "type": "local",
      "command": ["/usr/local/bin/npx", "-y", "@modelcontextprotocol/server-memory"],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["/usr/local/bin/npx", "-y", "@playwright/mcp@latest"],
      "enabled": true
    },
    "dev-tools": {
      "type": "local",
      "command": ["/Users/YOUR_USERNAME/go/bin/mcp-devtools"],
      "enabled": true,
      "environment": {
        "LOG_LEVEL": "error"
      }
    }
  }
}
