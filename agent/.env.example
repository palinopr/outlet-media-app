# Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=

# Your Telegram chat ID (run the bot, send /start, check logs for your ID)
TELEGRAM_CHAT_ID=

# Ticketmaster One credentials
TM_EMAIL=
TM_PASSWORD=

# Where the live app is running (use localhost:3000 for local dev)
INGEST_URL=https://your-app.vercel.app/api/ingest
INGEST_SECRET=

# Supabase (for job queue - enables Run buttons in the web dashboard)
# Get these from your Supabase project settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=

# How often to check TM One automatically (cron format, default: every 2 hours)
CHECK_CRON=0 */2 * * *
